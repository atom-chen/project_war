<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shareplatforminvite"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <application android:allowBackup="true" >
        <activity
            android:name="com.fetion.shareplatforminvite.func.FeixinFriendsListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/shelltranslucent" >
        </activity>
        <activity
            android:name="com.fetion.shareplatforminvite.func.FeixinContactListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent" >
        </activity>
    </application>

</manifest>
